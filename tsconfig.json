{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "src/*": ["./src/*"],
            "test/*": ["./test/*"]
        }
    },
    "include": ["./src/**/*.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
